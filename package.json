{
  "name": "rokuzeudon",
  "version": "1.0.0",
  "description": "blog.rokuzeudon.com",
  "author": "rokuzeudon",
  "license": "creativecommons.org/licenses/by/2.1/jp/legalcode",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm-run-all -p watch server",
    "build": "npm-run-all scss autoprefixer scss-about autoprefixer-about",

    "scss-about": "node-sass scss/about.scss build/about.css --output-style compressed",
    "autoprefixer-about": "postcss --use autoprefixer -r build/about.css --map false",

    "scss": "node-sass scss/style.scss build/style.css --output-style compressed",
    "autoprefixer": "postcss --use autoprefixer -r build/style.css --map false",

    "watch": "chokidar \"scss/\" -c \"npm run build\"",
    "server": "browser-sync start -c bs-config.js"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "browser-sync": "^2.18.13",
    "chokidar-cli": "^1.2.0",
    "node-sass": "^4.5.3",
    "normalize.css": "^7.0.0",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  }
}
